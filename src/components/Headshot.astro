---
const { src = "./img/headshot.png", alt = "Headshot" } = Astro.props;
---

<style>
  .frame{
    width: min(300px, 100%);
    aspect-ratio: 3 / 4;
    border-radius: 18px;
    border: 1px solid var(--border);
    box-shadow: var(--shadow);
    overflow: hidden;
    background: #f8fafc;
  }
  img{
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: 50% 35%;
    display: block;
  }
</style>

<div class="frame">
  <img src={src} alt={alt} loading="eager" />
</div>
