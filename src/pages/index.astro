      <div class="cta">
        <a class="btn primary" href="#projects">See projects</a>
        <a class="btn" href="./resume.pdf">Resume</a>
        <a class="btn" href="https://github.com/radkinz" target="_blank" rel="noreferrer">GitHub</a>
      </div>
    </div>
    <div style="display:flex; justify-content:center;">
      <Headshot src="./img/headshot.png" alt="My headshot" />
    </div>
  </section>

  <BotDivider variant="hero-about" />

    <!-- ABOUT -->
